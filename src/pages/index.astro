---
import Layout from '../layouts/Layout.astro'
import { Github, Lock, UploadCloud, MessageSquare, SunMoon } from 'lucide-react'
import ChatProcessor from '@/components/ChatProcessor'

const attachmentNote =
  'Attachment preview requires uploading the .zip export. .txt will show "<Media omitted>".'
---

<Layout
  title="WhatsApp Chat Export Reader - View Your Chats Easily"
  description="WhatsApp export reader: View exported .txt (or) .zip files instantly. Browse chats in the classic WhatsApp layout with dark mode & media support. Private & secure."
>
  <main class="container mx-auto px-4 py-12 md:py-20">
    {/* Hero Section */}
    <section class="mb-16 text-center md:mb-24">
      <h1 class="mb-4 text-4xl leading-tight font-bold tracking-tight md:text-6xl">
        View Your Exported WhatsApp Chats, <br class="hidden md:inline" />
        <span class="text-primary">Just Like in the App</span>
      </h1>
      <p class="text-muted-foreground mx-auto mb-8 max-w-4xl text-lg md:text-xl">
        Decode messy WhatsApp exports. Upload .txt or .zip files to view chats in the classic UI,
        mirroring WhatsApp's light/dark themes and showing image/video previews (via .zip). Secure,
        private, and <span class="underline underline-offset-5">runs entirely in your browser</span
        >.
      </p>
    </section>

    {/* File Upload Area (Client-side React Component) */}
    <section id="upload-section" class="mb-16 md:mb-24">
      <ChatProcessor client:load />
    </section>

    {/* Features Section */}
    <section class="mb-16 md:mb-24">
      <h2 class="mb-12 text-center text-3xl font-bold">Why Use This Reader?</h2>
      <div
        class="grid grid-cols-1 gap-8 px-5 text-center md:grid-cols-2 md:px-10 lg:px-15 xl:px-20"
      >
        <div class="bg-card flex flex-col items-center rounded-lg border p-6 shadow-sm">
          <div class="bg-primary/10 mb-4 rounded-full p-3">
            <Lock className="text-primary h-8 w-8" />
          </div>
          <h3 class="mb-2 text-xl font-semibold">Private & Browser-Based</h3>
          <p class="text-muted-foreground text-sm">
            Your chats are processed entirely within <em>your</em> browser using JavaScript. No data
            is ever sent to our servers, guaranteeing the privacy of your conversations. No installation
            required.
          </p>
        </div>
        <div class="bg-card flex flex-col items-center rounded-lg border p-6 shadow-sm">
          <div class="bg-primary/10 mb-4 rounded-full p-3">
            <SunMoon className="text-primary h-8 w-8" />
          </div>
          <h3 class="mb-2 text-xl font-semibold">Native Dark Theme</h3>
          <p class="text-muted-foreground text-sm">
            We've recreated the Whatsapp's native dark theme for comfortable reading, day or night.
            Just click the toggle <SunMoon className="inline-block h-4 w-4 align-text-bottom" /> in the
            top-right.
          </p>
        </div>

        <div class="bg-card flex flex-col items-center rounded-lg border p-6 shadow-sm">
          <div class="bg-primary/10 mb-4 rounded-full p-3">
            <MessageSquare className="text-primary h-8 w-8" />
          </div>
          <h3 class="mb-2 text-xl font-semibold">Authentic WhatsApp View</h3>
          <p class="text-muted-foreground text-sm">
            Rediscover your conversations. We meticulously render your messages, timestamps, sender
            names, emojis, and attachments<sup class="text-primary">*</sup> in the classic WhatsApp interface
            you know.
          </p>
        </div>

        <div class="bg-card flex flex-col items-center rounded-lg border p-6 shadow-sm">
          <div class="bg-primary/10 mb-4 rounded-full p-3">
            <UploadCloud className="text-primary h-8 w-8" />
          </div>
          <h3 class="mb-2 text-xl font-semibold">
            Simple Upload (<code class="text-sm">.txt</code> or <code class="text-sm">.zip</code>)
          </h3>
          <p class="text-muted-foreground text-sm">
            Just drag & drop or select your exported WhatsApp file â€“ either the plain <code
              >.txt</code
            > or the full <code>.zip</code> archive containing media. We'll handle the parsing.
          </p>
        </div>
      </div>

      <p class="text-muted-foreground mt-3 text-center text-xs">
        <sup class="text-primary">*</sup>{attachmentNote}
      </p>
    </section>

    {/* Footer Section */}
    <footer class="text-muted-foreground mt-16 border-t py-6 text-center md:mt-24">
      {
        (
          <a
            href="https://github.com/CITIZENDOT"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-primary inline-flex items-center text-sm transition-colors"
          >
            <Github className="h-4 w-4 mr-1" /> Built by Appaji
          </a>
        )
      }
    </footer>
  </main>
</Layout>
